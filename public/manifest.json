{
  "manifest_version": 3,
  "name": "Better Local Video Player",
  "version": "1.0",
  "description": "An improved video player for local video files with enhanced controls and features.",
  "browser_specific_settings": {
    "gecko": {
      "id": "better-local-video-player-new@trg69",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "file:///*/*.mp4",
        "file:///*/*.webm",
        "file:///*/*.ogv"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}