{
  "manifest_version": 3,
  "name": "Local Video Preview Hover",
  "version": "1.0",
  "description": "Shows a thumbnail preview when hovering over the progress bar of local video files.",
  "browser_specific_settings": {
    "gecko": {
      "id": "video-preview-hover@trg69",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "file:///*/*.mp4",
        "file:///*/*.webm",
        "file:///*/*.ogv"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}